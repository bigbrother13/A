<div class="container">
<h1>Bank</h1>
<h2><%= @money %></h2>
	<%= form_tag({controller: "home", action: "withdrawal"}, method: "post") do %>
	    <%= label_tag(:amount, "Ð¡alculate for:") %>
	    <%= text_field_tag(:amount) %>
	    <%= submit_tag("withdrawal money") %>
	<% end %>
  <h2>Available banknotes</h2>         
  <table class="table">
    <thead>
      <tr>
        <th>title</th>
        <th>quantity</th>
      </tr>
    </thead>
    <tbody>
      <% @banknotes.each do |banknote| %>
        <tr>
          <td><%= banknote.name %></td>
          <td><%= banknote.quantity %></td>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</body>
</html>
