<div class="container">
  <h2>Banknotes</h2>  
  <%= link_to 'Add new banknote', new_admin_banknote_path, class: 'btn btn-success pull-right'%>          
  <table class="table">
    <thead>
      <tr>
        <th>title</th>
        <th>quantity</th>
      </tr>
    </thead>
    <tbody>
      <% @banknotes.each do |banknote| %>
        <tr>
          <td><%= banknote.name %></td>
          <td><%= banknote.quantity %></td>
          <td><%= link_to 'Edit', edit_admin_banknote_path(banknote)%>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</body>
</html>
